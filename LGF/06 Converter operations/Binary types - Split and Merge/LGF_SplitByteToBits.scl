FUNCTION "LGF_SplitByteToBits" : Void
TITLE = LGF_SplitByteToBits
{ S7_Optimized_Access := 'TRUE' }
AUTHOR : Siemens_Digital_Industry
FAMILY : LGF
NAME : LGF_SplitByteToBits
//This function splits a Byte variable into 8 Boolean / 8 Bit variables.
   VAR_INPUT 
      "byte" : Byte;   // Bit sequence to be split
   END_VAR

   VAR_OUTPUT 
      bit7 : Bool;   // Output Bit 7 - MSB
      bit6 : Bool;   // Output Bit 6
      bit5 : Bool;   // Output Bit 5
      bit4 : Bool;   // Output Bit 4
      bit3 : Bool;   // Output Bit 3
      bit2 : Bool;   // Output Bit 2
      bit1 : Bool;   // Output Bit 1
      bit0 : Bool;   // Output Bit 0 - LSB
   END_VAR


BEGIN
	REGION BLOCK INFO HEADER
	  //===============================================================================
	  // SIEMENS AG / (c)Copyright 2018
	  //-------------------------------------------------------------------------------
	  // Title:            LGF_SplitByteToBits
	  // Comment/Function: This function splits a Byte variable into 8 Boolean / 8 Bit variables
	  // Library/Family:   LGF (Library General Functions)
	  // Author:           Siemens Digital Industry Support
	  // Tested with:      S7-PLCSIM Advanced V2.0 SP1
	  // Engineering:      TIA Portal V14 / V14SP1
	  // Restrictions:     ENO disabled - no error handling, no failure possible.
	  // Requirements:     PLC (S7-1200 / S7-1500)
	  //-------------------------------------------------------------------------------
	  // Change log table:
	  // Version  | Date       | Expert in charge       | Changes applied
	  //----------|------------|------------------------|------------------------------
	  // 01.00.00 | 20.06.2019 | Simatic Systems Support
	  //                         First release
	  // 03.00.00 | 23.04.2020 | Simatic Systems Support | Set version to V3.0.0
	  //                         harmonize the version of the whole library
	  // 03.00.01 | 22.02.2021 | Simatic Systems Support
	  //                         Insert documentation
	  //=============================================================================
	END_REGION
	
	REGION OUTPUT
	  // get the bits by slice access
	  #bit7 := #byte.%X7;
	  #bit6 := #byte.%X6;
	  #bit5 := #byte.%X5;
	  #bit4 := #byte.%X4;
	  #bit3 := #byte.%X3;
	  #bit2 := #byte.%X2;
	  #bit1 := #byte.%X1;
	  #bit0 := #byte.%X0;
	  // no error handling needed
	  ENO := TRUE;
	END_REGION
	
END_FUNCTION

